<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/otrasconfiguraciones_layoutOutter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradiente_verde_azulado"
    tools:context=".ui.fragments.usuario.OtrasConfiguraciones">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/otrasconfiguraciones_layoutInner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/marginEstandar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/square_with_rounded_corners"
        android:elevation="8dp">


        <Spinner
            android:id="@+id/otrasconfiguraciones_spinner_enfoquedelusuario"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginMuyPeque"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otrasconfiguraciones_textview_enfoquedelusuario" />

        <Spinner
            android:id="@+id/otrasconfiguraciones_spinner_masausuario"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginMuyPeque"
            app:layout_constraintEnd_toEndOf="@+id/otrasconfiguraciones_spinner_enfoquedelusuario"
            app:layout_constraintStart_toStartOf="@+id/otrasconfiguraciones_spinner_enfoquedelusuario"
            app:layout_constraintTop_toBottomOf="@+id/otrasconfiguraciones_textview_masausuario" />

        <TextView
            android:id="@+id/otrasconfiguraciones_textview_enfoquedelusuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginEstandar"
            android:text="@string/enfoque_del_usuario"
            android:textColor="@color/white"
            android:textSize="@dimen/sizeMaso"

            android:fontFamily="sans-serif-medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/otrasconfiguraciones_textview_masausuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginEstandar"
            android:fontFamily="sans-serif-medium"

            android:textColor="@color/white"
            android:textSize="@dimen/sizeMaso"
            android:text="@string/masa_del_usuario"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otrasconfiguraciones_spinner_enfoquedelusuario" />

        <TextView
            android:id="@+id/otrasconfiguraciones_textView_porcentajedegrasa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginEstandar"
            android:text="@string/porcentaje_de_grasa"
            android:fontFamily="sans-serif-medium"

            android:textColor="@color/white"
            android:textSize="@dimen/sizeMaso"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otrasconfiguraciones_spinner_masausuario" />

        <Spinner
            android:id="@+id/otrasconfiguraciones_spinner_porcentajedegrasa"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginMuyPeque"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otrasconfiguraciones_textView_porcentajedegrasa" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/otrasconfiguraciones_textview_alturaUsuario"
            android:layout_marginTop="32dp"
            android:text="@string/altura_del_usuario"
            android:fontFamily="sans-serif-medium"

            android:textColor="@color/white"
            android:textSize="@dimen/sizeMediano"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otrasconfiguraciones_spinner_porcentajedegrasa" />


        <TextView
            android:id="@+id/otrasconfiguraciones_textview_edadUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="@string/edad_del_usuario"
            android:fontFamily="sans-serif-medium"

            android:textColor="@color/white"
            android:textSize="@dimen/sizeMaso"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otrasconfiguraciones_spinner_alturaUsuario" />

        <Spinner
            android:id="@+id/otrasconfiguraciones_spinner_edadUsuario"
            android:layout_width="300dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/marginMuyPeque"
            app:layout_constraintTop_toBottomOf="@+id/otrasconfiguraciones_textview_edadUsuario"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <Spinner
            android:id="@+id/otrasconfiguraciones_spinner_alturaUsuario"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginMuyPeque"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otrasconfiguraciones_textview_alturaUsuario" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="@string/meta_inicial"
            android:fontFamily="sans-serif-medium"

            android:textColor="@color/white"
            android:textSize="@dimen/sizeMaso"
            android:id="@+id/otrasconfiguraciones_textview_metaInicial"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otrasconfiguraciones_spinner_edadUsuario" />

        <Spinner
            android:id="@+id/otrasconfiguraciones_spinner_metaInicial"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginMuyPeque"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otrasconfiguraciones_textview_metaInicial" />

        <Button
            android:id="@+id/otrasconfiguraciones_botonConfirmar"
            android:layout_width="@dimen/largoboton1"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin16"
            android:text="@string/confirmar"
            android:backgroundTint="@color/gradienteEnd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otrasconfiguraciones_spinner_metaInicial"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>